<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="beans.Client">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="fullName" value="Joan Smith"/>
    </bean>

    <bean id="eventLogger" class="loggers.ConsoleEventLogger"/>

    <bean id="app" class="beans.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean name="event" class="beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="fileEventLogger" class="loggers.FileEventLogger" init-method="init">
        <constructor-arg  value="src\main\resources\events_log.txt"/>
    </bean>


</beans>